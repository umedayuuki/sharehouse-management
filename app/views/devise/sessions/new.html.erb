<%= render "devise/shared/second-header"%>

<div class="card col-sm-6 mx-auto mb-5">
  <div class="card-body text-center mx-auto">
    <h4 class="mt-1 mb-3">ログイン</h4><br>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label "名前（シェアハウス）" %><br>
        <%= f.text_field :house_name, autofocus: true, autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.label "パスワード（6文字以上）" %><br>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
      
      <div class="actions">
        <%= f.submit "ログイン", :class => "btn btn-outline-dark disabled" %>
      </div>
    <% end %>

  </div>
</div>
