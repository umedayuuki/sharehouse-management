<div>
  <%= link_to "ルームに戻る", chats_path, class: "post" %>
</div>
<div class="contents row">
  <div class="container">
    <h3>チャットを投稿する</h3>
    <%= form_with(model: @chat, local: true) do |form| %>
    <%= render 'layouts/error_messages', model: form.object %>
      <%= form.select :user_name, @users.map{ |user| user.user_name }, include_blank: "住民を選択" %><br>
      <%= form.file_field :image, id:"item-image" %><br>
      <%= form.text_field :talk, placeholder: "talk" %><br>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>