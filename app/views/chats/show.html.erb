<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h3 class="fw-light">チャット詳細</h3>
      <p class="lead text-muted">チャットの編集・削除が可能です。</p>
      <p>
        <%= link_to "編集", edit_chat_path, class: "btn btn-outline-success my-2" %>
        <%= link_to "削除", chat_path, method: :delete, class: "btn btn-outline-danger my-2" %>
        <%= link_to "ルームに戻る", chats_path, class: "btn btn-outline-warning my-2" %>
      </p>
    </div>
  </div>
</section>
<main>
  <div class="card col-8 mx-auto mb-5">
    <div class="card-body text-center mx-auto">
      <% if current_house.id == @chat.house_id %>
        <div class="col my-5">
          <div class="card shadow-sm">
            <% if @chat.image.present? %>
              <%= link_to image_tag(@chat.image, class:"show-logo") %>
            <% end %>
            <div class="card-body">
              <h4 class="card-text">
                投稿者：<%= @chat.user_name %><br>
                <br>
                内容：<%= @chat.talk %>
              </h4>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</main>