<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h3 class="fw-light">ルームメイト編集</h3>
      <p class="lead text-muted">ルームメイトの編集が可能です。</p>
      <p>
        <%= link_to "詳細に戻る", user_path(@user.id), class: "btn btn-outline-warning my-2" %>
      </p>
    </div>
  </div>
</section>
<div class="card col-sm-6 mx-auto mb-5">
  <div class="card-body text-center mx-auto">
    <h4 class="mt-1 mb-3">ルームメイト編集</h4><br>
    <%= form_with(model: @user, local: true) do |form| %>
     <%= render 'layouts/error_messages', model: form.object %>

      <div class="form-group">
        <%= form.file_field :image %>
      </div>

      <div class="form-group">
        <%= form.text_field :user_name, autocomplete: "off", placeholder: "ニックネーム" %>
      </div>

      <div class="form-group">
        <%= form.text_field :birthday, autocomplete: "off", placeholder: "○○月○○日" %>
      </div>

      <div class="actions">
        <%= form.submit "変更", :class => "btn btn-outline-dark disabled" %>
      </div>

    <% end %>
  </div>
</div>