<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h3 class="fw-light">ルール作成</h3>
      <p class="lead text-muted">ルールの作成が可能です。</p>
      <p>
        <%= link_to "一覧に戻る", rules_path, class: "btn btn-outline-warning my-2" %>
      </p>
    </div>
  </div>
</section>
<div class="card col-sm-6 mx-auto mb-5">
  <div class="card-body text-center mx-auto">
    <h4 class="mt-1 mb-3">ルール内容</h4><br>
    <%= form_with(model: @rule, local: true) do |form| %>
     <%= render 'layouts/error_messages', model: form.object %>

      <div class="form-group">
        <%= form.select :user_name, @users.map{ |user| user.user_name }, include_blank: "作成者を選択" %>
      </div>

      <div class="form-group">
        <%= form.text_field :title, autocomplete: "off", placeholder: "タイトル" %>
      </div>

      <div class="form-group">
        <%= form.text_area :content, autocomplete: "off", rows: "7" %>
      </div>

      <div class="actions">
        <%= form.submit "作成", :class => "btn btn-outline-dark disabled" %>
      </div>

    <% end %>
  </div>
</div>